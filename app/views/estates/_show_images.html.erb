<!--Carousel Wrapper-->
<div id="carousel-thumb<%= defined?(carousel_id) ? carousel_id : '' %>" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
  <!--Slides-->
  <div class="carousel-inner" role="listbox" style="height: 100%;">

    <div class="carousel-item active" style="height: 100%;">
      <%= image_tag url_for(images.first), class: "d-block w-100", style: (defined?(h_size) == nil ? 'height: auto' : 'height: '+h_size.to_s)+';background-color: #ADD8E6;' %>
    </div>
    <% images.drop(1).each do |image| %>
      <div class="carousel-item" style="height: 100%;">
        <%= image_tag url_for(image), class: "d-block w-100", style: (defined?(h_size) == nil ? 'height: auto' : 'height: '+h_size.to_s)+';background-color: #ADD8E6;' %>
      </div>
    <% end %>

  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-thumb<%= defined?(carousel_id) ? carousel_id : '' %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#carousel-thumb<%= defined?(carousel_id) ? carousel_id : '' %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
  <!--/.Controls-->
  <ol class="carousel-indicators">
    <% images.each_with_index do |image, i| %>
      <li data-target='#carousel-thumb<%= defined?(carousel_id) ? carousel_id : '' %>' data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>">
        <%= image_tag url_for(image), class: "d-block w-100 img-fluid", style: 'height: 30px;background-color: #ADD8E6;' %>
      </li>
    <% end %>
  </ol>
</div>
<!--/.Carousel Wrapper-->