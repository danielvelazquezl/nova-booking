<div>
  <table class="table table-striped table-hover w-100">
    <thead class="thead-light">
    <tr>
      <th class="text-center">Nombre</th>
      <th class="text-center">Propiedad</th>
      <th class="text-center">Creaci√≥n</th>
      <th class="text-center">Desde</th>
      <th class="text-center">Hasta</th>
      <th class="text-center">Estado</th>
      <th class="text-center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% offers.each do |offer| %>
      <tr>
        <td class="text-center"><%= offer.description %></td>
        <td class="text-center"><%= offer.estate_name %></td>
        <td class="text-center"><%= offer.date_creation.strftime("%d/%m/%Y") %></td>
        <td class="text-center"><%= offer.date_start.strftime("%d/%m/%Y") %></td>
        <td class="text-center"><%= offer.date_end.strftime("%d/%m/%Y") %></td>
        <td class="text-center">
          <% if offer.date_end < Date.today %>
            <span class="badge badge-warning">Vencida</span>
          <% else %>
            <span class="badge badge-success">Activa</span>
          <% end %>
        </td>
        <td class="text-center">
          <div class="btn-group" role="group">
            <%= link_to offer do %>
              <button class="btn btn-link text-primary" title="Ver"><i class="fas fa-eye"></i></button>
            <% end %>
            <button class="btn btn-link text-primary" title="Editar"><i class="fas fa-edit"></i></button>
            <button class="btn btn-link text-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="card-columns-2 card-body">
    <div class="row row-flush">
      <div class="col col-6 align-items-center">
        <%= will_paginate offers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
      <div class="col col-9">
        <%= page_entries_info offers, :model => 'offer', :class => 'align-middle' %>
      </div>
    </div>
  </div>
  <div class="ml-auto">
    <%= link_to new_offer_path do %>
      <button class="btn btn-info" title="Nueva oferta">Nueva Oferta</button>
    <% end %>
  </div>
</div>