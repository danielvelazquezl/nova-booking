<%= form_with(model: offer, local: true) do |form| %>
  <div align="center">
    <div class="card card-default col-10">
      <div class="card-body">
        <div class="row" align="left">
          <div class="col-md-8">
            <div class="card-body">
              <div class="form-group col-10">
                <label>Propiedad</label>
                <input type="text" class="form-control valid" value="<%= estate_name %>" disabled required>
                <%= form.hidden_field :estate_id%>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group col-10">
                <label>Descripci&oacute;n *</label>
                <%= form.text_field :description, class: "form-control", required: "required" %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card-body">
              <div class="form-group  ">
                <label>Desde</label>
                <%= form.date_field :date_start, min: Date.today, class: "form-control", required: "required" %>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label>Hasta </label>
                <%= form.date_field :date_end, min: Date.today, class: "form-control", required: "required" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if offer.estate_id != nil %>
    <div align="center">
      <div class="card card-default col-10">
        <div class="card-body">
          <p class="lead bb">DETALLES</p>
          <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
              <table class="table">
                <thead class="table-primary">
                <tr class="row table-primary">
                  <th class="col-7">Habitaci&oacute;n</th>
                  <th class="col-3">Descuento</th>
                  <th class="col-2">Acci&oacute;n</th>
                </tr>
                </thead>
                <tbody id="invoices-items-table">
                <%= form.fields_for :offer_details, offer_details do |f| %>
                  <%= render 'offer_detail', f: f, partial_param: offer %>
                <% end %>
                </tbody>
              </table>
              <%= link_to_add_fields "Agregar habitacion", form, :offer_details, offer %>
            </div>
            <div class="col-2"></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div align="center">
    <div class="col-10">
      <fieldset>
        <div class="form-group row">
          <% if from_estates %>
            <%= link_to 'Atrás', estates_path, class: "btn btn-outline-primary" %>
          <% else %>
            <%= link_to 'Atrás', offers_path, class: "btn btn-outline-primary" %>
          <% end %>

          <%= form.submit 'Guardar', class: "btn btn-success" %>
        </div>
      </fieldset>
    </div>
  </div>

<% end %>
