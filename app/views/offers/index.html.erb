<p id="notice"><%= notice %></p>

<div class="content-heading">
  <div>Ofertas de mis propiedades</div>

  <div class="ml-auto">
      <button class="btn btn btn-info" title="Nueva propiedad">
        <i class="fas fa-plus text-light fa-1x"></i>
      </button>
  </div>
</div>


<div class="container">
  <div class="form-row">
    <div class="col">
      <table class="table table-bordered">
        <% offers.each do |offer| %>
          <tr>
            <td class="results-background">
              <div class="media align-items-center">
                <a class="mr-4" href="#">
                  <%= image_tag offer.estate_images.first, alt: "rss feed", height: 150, width: 150 %>
                </a>
                <div class="media-body d-flex">
                  <div class="">
                    <h4 class="m-0 text-info" style="font-size:25px">
                      <%= offer.description %>&nbsp;&nbsp;&nbsp;
                      <%if offer.date_end < Date.today %>
                        <span class="badge badge-warning" style="font-size: 15px;">Vencida</span>
                      <%else %>
                        <span class="badge badge-success" style="font-size: 15px;">En curso</span>
                      <%end %>
                    </h4>
                    <br>
                    <p>
                      <b>Propiedad: </b><%= offer.estate_name %> <br>
                      <b>Desde: </b><%= offer.date_start.strftime("%d/%m/%Y") %> &nbsp;&nbsp;&nbsp;<b>Hasta: </b><%= offer.date_end.strftime("%d/%m/%Y") %>
                    </p>
                  </div>
                  <div class="ml-auto">
                    <div class="btn-group" role="group">
                      <button class="btn btn-outline-primary text-primary" title="Ver"><i class="fas fa-eye"></i></button>
                      <button class="btn btn-outline-primary text-primary" title="Editar"><i class="fas fa-edit"></i></button>
                      <button class="btn btn-outline-danger text-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </table>

      <!--PRUEBA TEAMCITY 1 -->
      <div class="card-columns-2 card-body">
        <div class="row row-flush">
          <div class="col col-6 align-items-center">
            <%= will_paginate offers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>
          <div class="col col-9">
            <%= page_entries_info offers, :model => 'offer', :class => 'align-middle' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
