<div>
  <table class="table table-striped table-hover w-100 col-5">
    <thead class="thead-light">
    <tr>
      <th class="text-center">Motivos</th>
      <th class="text-center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% cancellation_motives.each do |cancellation_motive| %>
      <tr>
        <td class="text-left"><%= cancellation_motive.description %></td>
        <td class="text-center">
          <div class="btn-group" role="group">
            <%= link_to cancellation_motive do %>
              <button class="btn btn-link text-primary" title="Ver"><i class="fas fa-eye"></i></button>
            <% end %>
            <%= link_to edit_cancellation_motive_path(cancellation_motive) do %>
              <button class="btn btn-link text-primary" title="Editar"><i class="fas fa-edit"></i></button>
            <% end %>
            <%= link_to cancellation_motive, method: :delete, data: {confirm: 'EstÃ¡s seguro?'} do %>
              <button class="btn btn-link text-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></button>
            <% end %>
          </div>
        </td>

      </tr>
    <% end %>
    </tbody>
  </table>
</div>